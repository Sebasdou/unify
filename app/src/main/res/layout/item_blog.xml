<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp" >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_profile"
            android:src="@drawable/profile_user"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_publication" />
        <TextView
            android:id="@+id/tv_name_user"
            android:layout_marginStart="4dp"
            android:textSize="14sp"
            android:text="María Rivero"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_datetime"
            android:text="11/12/22 13:02 hrs"
            android:textSize="10sp"
            android:layout_marginStart="4dp"
            android:textStyle="italic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_name_user"
            app:layout_constraintLeft_toRightOf="@id/iv_profile"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_publication"
            android:padding="8dp"
            android:layout_marginVertical="2dp"
            android:text="Hoy pasé matemáticas!!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_datetime" />
        <View
            android:id="@+id/divider"
            android:background="#A9A8A8"
            android:layout_marginVertical="4dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_publication" />

        <Button
            android:id="@+id/btn_like"
            android:text="Me gusta"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toLeftOf="@id/btn_comment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"/>

        <Button
            android:id="@+id/btn_comment"
            android:text="Comentar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintLeft_toRightOf="@id/btn_like"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>