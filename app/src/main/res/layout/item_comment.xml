<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/responses"
    app:layout_constraintTop_toBottomOf="@id/divider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_profile_r"
        android:src="@drawable/profile_user"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_comment"/>
    <TextView
        android:id="@+id/tv_name_user_r"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        android:text="Juan Escutia"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_profile_r"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_datetime_r"
        android:text="11/12/22 13:02 hrs"
        android:layout_marginStart="4dp"
        android:textSize="8sp"
        android:textStyle="italic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name_user_r"
        app:layout_constraintLeft_toRightOf="@id/iv_profile_r"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_comment"
        android:textSize="12sp"
        android:text="Muchas felicidades!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_datetime_r" />
</androidx.constraintlayout.widget.ConstraintLayout>